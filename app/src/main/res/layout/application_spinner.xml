<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    app:layout_constraintCircleRadius="50dp"
    android:background="#232323">

    <ImageView
        android:id="@+id/applicationImg_AddPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="4dp"
        android:src="@drawable/ic_aws"/>

    <TextView
        android:id="@+id/applicationName_AddPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Amazon Web Services"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="8dp"
        android:textSize="18sp"
        android:layout_alignBottom="@id/applicationImg_AddPassword"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/applicationImg_AddPassword"
        />

</RelativeLayout>