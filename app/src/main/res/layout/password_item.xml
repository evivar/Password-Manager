<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:elevation="5dp"
    style="@style/DarkCardView">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/photo_Person"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="50dp"
            app:cardElevation="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/appImg_Password"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:padding="8dp"
                tools:background="@drawable/ic_add" />

        </androidx.cardview.widget.CardView>

        <TextView
            style="@style/PrincipalTxt"
            android:id="@+id/NameTxt_Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Name"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            style="@style/PrincipalTxt"
            android:id="@+id/userLbl_Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="47dp"
            android:text="Usuario"
            app:layout_constraintStart_toEndOf="@+id/photo_Person"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            style="@style/PrincipalTxt"
            android:id="@+id/passwordLbl_Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:text="ContraseÃ±a"
            app:layout_constraintStart_toEndOf="@+id/photo_Person"
            app:layout_constraintTop_toBottomOf="@+id/userLbl_Password" />

        <TextView
            android:id="@+id/userTxt_Password"
            android:layout_width="0dp"
            style="@style/SecondaryTxt"
            android:layout_height="wrap_content"
            android:layout_marginStart="33dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="1dp"
            android:text="user@user.com"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/userLbl_Password"
            app:layout_constraintTop_toBottomOf="@+id/NameTxt_Password" />

        <TextView
            android:id="@+id/passwordTxt_Password"
            android:layout_width="0dp"
            style="@style/SecondaryTxt"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="1dp"
            android:password="true"
            android:text="Testeamos"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/passwordLbl_Password"
            app:layout_constraintTop_toBottomOf="@+id/userTxt_Password" />

        <ImageButton
            android:id="@+id/viewBtn_Password"
            style="@style/DarkImgButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toStartOf="@+id/visitBtn_Password"
            app:layout_constraintTop_toBottomOf="@+id/passwordTxt_Password"
            app:srcCompat="@drawable/ic_eye" />

        <ImageButton
            android:id="@+id/visitBtn_Password"
            style="@style/DarkButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/passwordTxt_Password"
            app:srcCompat="@drawable/ic_visit" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>